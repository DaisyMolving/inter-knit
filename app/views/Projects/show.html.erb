<h1 class="project-title"><%= @project.name %> : <%= @project_stage.first.title %> </h1>


<div id="projectOverview">
  <h1 class="modal-title"><%= @project.name %></h1>
  <h2 class="modal-level"> Difficulty Level: <%= @project.difficulty_level %> </h2>
  <img src="http://jennozkan.com/wp-content/uploads/2010/12/crochet-scarf-7.jpg">
  <button class="closeModal">Let's start!</button>
</div> 
 

<div class="navbar-header">
  <h1>Instructions</h1>
  
  <% @project_stage_instructions.each do |instruction| %>
    <ol> 
      <li><%= instruction.content %></li> 
      <button id="howButton">How do I do this?</button>   
    </ol>
  <% end %>
  <button id="go-back" type="submit" class="missed-something"> Go Back </button>
  <button id="next-stage" type="submit" class="i-am-done">I'm Done!</button>
</div> 

<div id="howToVideo">
  <h1 class="howToTitle"> Here is how! </h1>
  <iframe src=""></iframe>
  <button id="got-it" type="submit" class="i-know-how">
  Ok, I understand!
  </button>
</div>
